<script>
  import {
    getInitialColorMode,
    setRootStyles,
    setTheme,
  } from "../lib/color-theme.ts";

  const themeToggleId = "color-theme-toggle";

  (function () {
    const colorMode = getInitialColorMode();
    setRootStyles(colorMode);
  })();

  const button = document.getElementById(themeToggleId);
  button!.addEventListener("click", () => {
    setTheme();
  });
</script>
